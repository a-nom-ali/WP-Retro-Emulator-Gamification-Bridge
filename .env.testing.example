# Testing Environment Variables
# Copy this file to .env.testing and update with your values

# WordPress Test Suite
WP_PHPUNIT__DIR=/path/to/wordpress-develop/tests/phpunit
WP_TESTS_DIR=/path/to/wordpress-develop/tests/phpunit
WP_CORE_DIR=/path/to/wordpress-develop/src/

# WordPress Test Database
WP_DB_NAME=wordpress_test
WP_DB_USER=root
WP_DB_PASS=password
WP_DB_HOST=localhost

# Playwright E2E Tests
WP_BASE_URL=http://campaign-forge.local
WP_ADMIN_USER=admin
WP_ADMIN_PASS=password

# Optional: Test User IDs
TEST_USER_ID=1
TEST_ADMIN_ID=1
